[script]
# 原 YAML 的 script-providers：HUPU_remove_ads.js
# 下面 4 条为“脚本重写响应体”，与 YAML 的 match/name/type/require-body 对应
虎扑去广告 = type=http-response,pattern=^https:\/\/fairy\.mobileapi\.hupu\.com\/mang\/preview\/banners(\?.*)?$,requires-body=1,max-size=0,script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/master/Resource/Script/HUPU/HUPU_remove_ads.js
虎扑去广告 = type=http-response,pattern=^https:\/\/bbs\.mobileapi\.hupu\.com\/\d\/\d\.\d\.\d+\/bbsallapi\/lego\/data(\?.*)?$,requires-body=1,max-size=0,script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/master/Resource/Script/HUPU/HUPU_remove_ads.js
虎扑去广告 = type=http-response,pattern=^https:\/\/games\.mobileapi\.hupu\.com\/\d\/\d\.\d\.\d+\/buffer\/hotList(\?.*)?$,requires-body=1,max-size=0,script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/master/Resource/Script/HUPU/HUPU_remove_ads.js
